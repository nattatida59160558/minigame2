<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutFragment">

        <TextView
            android:id="@+id/txtAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pic"
            android:layout_marginTop="@dimen/pic"
            android:layout_marginRight="@dimen/pic"
            android:text="@string/about"
            android:textSize="@dimen/size"
            app:layout_constraintBottom_toTopOf="@+id/txtdetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtdetail"
            android:layout_width="275dp"
            android:layout_height="152dp"
            android:layout_marginLeft="@dimen/pic"
            android:layout_marginTop="@dimen/pic"
            android:layout_marginRight="@dimen/pic"
            android:background="@android:color/holo_purple"
            android:paddingStart="@dimen/top"
            android:paddingLeft="@dimen/top"
            android:paddingTop="@dimen/top"
            android:paddingEnd="@dimen/top"
            android:paddingRight="@dimen/top"
            android:text="@string/aboutdetail"
            android:textSize="@dimen/size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAbout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>